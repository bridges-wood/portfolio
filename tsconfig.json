{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": "./src",
		"paths": {
			"@components/*": ["components/*"],
			"@layouts/*": ["layouts/*"],
			"@hooks/*": ["hooks/*"],
			"@pages/*": ["pages/*"],
			"@typings/*": ["typings/*"],
			"@utils/*": ["utils/*"],
			"@*": ["*"],
			"@lib/*": ["lib/*"],
			"@json/*": ["../json/*.json"],
			"@styles/*": ["styles/*"],
			"@plugins/*": ["plugins/*"]
		},
		"incremental": true
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
